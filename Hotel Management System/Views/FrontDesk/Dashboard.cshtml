@model IEnumerable<Hotel_Management_System.Models.Booking>

<h2>All Bookings</h2>

@if (User.IsInRole("Admin") || User.IsInRole("FrontDesk"))
{
    <!-- Button to view pending bookings -->
    <a href="@Url.Action("DashboardBooking", "FrontDesk")" class="btn btn-warning mb-3">View Pending Bookings</a>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Guest Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Room ID</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.GuestName</td>
                        <td>@booking.Email</td>
                        <td>@booking.PhoneNumber</td>
                        <td>@booking.RoomId</td>
                        <td>@booking.CheckInDate.ToShortDateString()</td>
                        <td>@booking.CheckOutDate.ToShortDateString()</td>
                        <td>@booking.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No bookings found.</p>
    }
}
else
{
    <p>You do not have permission to view this page.</p>
}